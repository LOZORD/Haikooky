<h1>Listing haikus</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Author</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @haikus.each do |haiku| %>
      <tr>
        <td><%= haiku.user_id %></td>
        <td><%= haiku.author %></td>
        <td><%= haiku.content %></td>
        <td><%= link_to 'Show', haiku %></td>
        <td><%= link_to 'Edit', edit_haiku_path(haiku) %></td>
        <td><%= link_to 'Destroy', haiku, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

